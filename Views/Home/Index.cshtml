@{
    ViewData["Title"] = "Tic-Tac-Toe";
}

<div class="container text-center mt-5">
    <h1 class="text-title">Tic Tac Toe</h1>

    <div class="row justify-content-center align-items-center">
        <!-- Scoreboard -->
        <div class="col-md-3">
            <h3>Scoreboard</h3>
            <p>X Wins: <span id="xWins">0</span></p>
            <p>O Wins: <span id="oWins">0</span></p>
            <p>Draws: <span id="draws">0</span></p>
            <button class="btn btn-danger" id="resetScoreboard">Reset Scoreboard</button>
        </div>

        <!-- Game Board -->
        <div class="col-md-6 d-flex flex-column align-items-center">
            <div id="gameBoard" class="game-board">
                <div class="cell" data-index="0"></div>
                <div class="cell" data-index="1"></div>
                <div class="cell" data-index="2"></div>
                <div class="cell" data-index="3"></div>
                <div class="cell" data-index="4"></div>
                <div class="cell" data-index="5"></div>
                <div class="cell" data-index="6"></div>
                <div class="cell" data-index="7"></div>
                <div class="cell" data-index="8"></div>
            </div>

            <!-- Centered Restart Button -->
            <div class="d-flex justify-content-center mt-3">
                <button class="btn btn-warning" id="restartGame">Restart Game</button>
            </div>

        </div>

        <!-- Game Mode -->
        <div class="col-md-3 d-flex flex-column align-items-center">
            <h3>Game Mode</h3>
            <button class="btn btn-primary mb-2" id="playAI">Play vs AI</button>
            <button class="btn btn-primary" id="playMultiplayer">Multiplayer</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/game.js"></script>
}
